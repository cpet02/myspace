---
// minesweeper.astro - Minesweeper game page
import Layout from '../layouts/Layout.astro';
---

<Layout title="Minesweeper - Personal Website">
  <header class="page-header">
    <h1 class="page-title">Minesweeper</h1>
  </header>

  <section class="minesweeper-section">
    <div class="minesweeper-container">
      <div class="minesweeper-game">
        <div class="minesweeper-header">
          <div class="minesweeper-stats">
            <div class="minesweeper-counter minesweeper-mines-counter">
              <span class="counter-label">Mines:</span>
              <span class="counter-value" id="mines-count">10</span>
            </div>
            <div class="minesweeper-timer">
              <span class="timer-label">Time:</span>
              <span class="timer-value" id="game-timer">000</span>
            </div>
            <div class="minesweeper-counter minesweeper-flags-counter">
              <span class="counter-label">Flags:</span>
              <span class="counter-value" id="flags-count">0</span>
            </div>
          </div>
          <div class="minesweeper-controls">
            <button class="minesweeper-button" id="new-game-btn">
              <span class="button-icon">ðŸ˜Š</span>
              <span class="button-text">New Game</span>
            </button>
            <div class="minesweeper-difficulty">
              <span class="difficulty-label">Difficulty:</span>
              <span class="difficulty-value">Beginner</span>
            </div>
          </div>
        </div>

        <div class="minesweeper-board-container">
          <div class="minesweeper-board" id="game-board">
            <!-- Game board will be generated by JavaScript -->
          </div>
        </div>

        <div class="minesweeper-instructions">
          <h3 class="instructions-title">How to Play</h3>
          <ul class="instructions-list">
            <li><strong>Left Click:</strong> Reveal a tile</li>
            <li><strong>Right Click:</strong> Place/remove a flag</li>
            <li><strong>Chording (Left+Right Click):</strong> Reveal adjacent tiles when correct number of flags are placed</li>
            <li><strong>Goal:</strong> Reveal all non-mine tiles without triggering any mines</li>
          </ul>
          <div class="minesweeper-legend">
            <h4 class="legend-title">Tile Legend</h4>
            <div class="legend-items">
              <div class="legend-item">
                <div class="legend-tile tile-hidden"></div>
                <span class="legend-text">Hidden tile</span>
              </div>
              <div class="legend-item">
                <div class="legend-tile tile-flag">ðŸš©</div>
                <span class="legend-text">Flagged tile</span>
              </div>
              <div class="legend-item">
                <div class="legend-tile tile-mine">ðŸ’£</div>
                <span class="legend-text">Mine</span>
              </div>
              <div class="legend-item">
                <div class="legend-tile tile-number tile-1">1</div>
                <span class="legend-text">1 adjacent mine</span>
              </div>
              <div class="legend-item">
                <div class="legend-tile tile-number tile-2">2</div>
                <span class="legend-text">2 adjacent mines</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <script src="/js/minesweeper.js" defer></script>
  <style>
    /* Minesweeper specific styles */
    .minesweeper-section {
      margin-bottom: var(--space-xl);
    }

    .minesweeper-container {
      max-width: 800px;
      margin: 0 auto;
    }

    .minesweeper-game {
      background: var(--color-bg-alt);
      border-radius: var(--radius-lg);
      padding: var(--space-lg);
      box-shadow: var(--shadow-lg);
      border: 1px solid var(--color-border);
    }

    .minesweeper-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: var(--space-md);
      padding-bottom: var(--space-md);
      border-bottom: 2px solid var(--color-border);
    }

    .minesweeper-stats {
      display: flex;
      gap: var(--space-lg);
      align-items: center;
    }

    .minesweeper-counter,
    .minesweeper-timer {
      display: flex;
      flex-direction: column;
      align-items: center;
      background: var(--color-bg);
      padding: var(--space-sm) var(--space-md);
      border-radius: var(--radius-md);
      border: 1px solid var(--color-border);
      min-width: 100px;
    }

    .counter-label,
    .timer-label {
      font-family: var(--font-meta);
      font-size: 0.8rem;
      color: var(--color-text-light);
      margin-bottom: 0.25rem;
    }

    .counter-value,
    .timer-value {
      font-family: 'Courier New', monospace;
      font-size: 1.5rem;
      font-weight: bold;
      color: var(--color-text);
    }

    .minesweeper-controls {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: var(--space-sm);
    }

    .minesweeper-button {
      display: flex;
      align-items: center;
      gap: var(--space-sm);
      padding: 0.75rem 1.5rem;
      background: var(--color-accent);
      color: var(--color-bg-alt);
      border: 1px solid var(--color-accent-secondary);
      border-radius: 50px;
      font-family: var(--font-accent);
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
      box-shadow: 0 3px 6px rgba(58, 50, 34, 0.1);
    }

    .minesweeper-button:hover {
      background: var(--color-accent-light);
      transform: translateY(-3px) scale(1.05);
      box-shadow: 0 6px 16px rgba(58, 50, 34, 0.15);
    }

    .minesweeper-button:active {
      transform: translateY(0) scale(0.98);
      box-shadow: 0 1px 3px rgba(58, 50, 34, 0.1);
    }

    .button-icon {
      font-size: 1.25rem;
    }

    .minesweeper-difficulty {
      font-family: var(--font-meta);
      font-size: 0.9rem;
      color: var(--color-text-light);
    }

    .difficulty-label {
      margin-right: 0.5rem;
    }

    .difficulty-value {
      font-weight: 600;
      color: var(--color-accent);
    }

    .minesweeper-board-container {
      display: flex;
      justify-content: center;
      margin-bottom: var(--space-lg);
    }

    .minesweeper-board {
      display: grid;
      grid-template-columns: repeat(9, 1fr);
      gap: 2px;
      background: var(--color-border);
      padding: 4px;
      border-radius: var(--radius-sm);
      border: 2px solid var(--color-border);
    }

    .minesweeper-tile {
      width: 32px;
      height: 32px;
      display: flex;
      align-items: center;
      justify-content: center;
      background: #c0c0c0;
      border: 2px outset #808080;
      font-family: 'Courier New', monospace;
      font-weight: bold;
      font-size: 14px;
      cursor: pointer;
      user-select: none;
      color: #000000 !important; /* Force black text by default, overridden by JS */
      transition: none !important;
      animation: none !important;
      outline: none !important;
      box-shadow: none !important;
    }
    
    /* REMOVE ALL TRANSITIONS AND ANIMATIONS FROM EVERYTHING */
    .minesweeper-board,
    .minesweeper-board *,
    .minesweeper-tile,
    .minesweeper-tile * {
      transition: none !important;
      animation: none !important;
      -webkit-transition: none !important;
      -moz-transition: none !important;
      -o-transition: none !important;
    }

    /* NO CSS HOVER EFFECTS - handled by JavaScript */

    .minesweeper-tile.revealed {
      /* Styles handled by JavaScript with !important */
    }

    .minesweeper-tile.mine {
      background: #ff0000;
    }

    .minesweeper-tile.flagged {
      /* Flag styling handled by JavaScript */
    }

    /* Number colors are handled by JavaScript inline styles */

    .minesweeper-instructions {
      background: var(--color-bg);
      border-radius: var(--radius-md);
      padding: var(--space-md);
      border: 1px solid var(--color-border);
    }

    .instructions-title {
      font-size: 1.25rem;
      margin-bottom: var(--space-sm);
      color: var(--color-accent);
    }

    .instructions-list {
      list-style: none;
      margin-bottom: var(--space-md);
    }

    .instructions-list li {
      margin-bottom: 0.5rem;
      padding-left: 1.5rem;
      position: relative;
    }

    .instructions-list li::before {
      content: "â€¢";
      color: var(--color-accent);
      position: absolute;
      left: 0;
    }

    .minesweeper-legend {
      margin-top: var(--space-md);
    }

    .legend-title {
      font-size: 1rem;
      margin-bottom: var(--space-sm);
      color: var(--color-text-light);
    }

    .legend-items {
      display: flex;
      flex-wrap: wrap;
      gap: var(--space-md);
    }

    .legend-item {
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .legend-tile {
      width: 24px;
      height: 24px;
      display: flex;
      align-items: center;
      justify-content: center;
      background: #c0c0c0;
      border: 2px outset #808080;
      font-family: 'Courier New', monospace;
      font-weight: bold;
      font-size: 12px;
    }

    .legend-text {
      font-size: 0.9rem;
      color: var(--color-text-light);
    }

    .tile-hidden {
      background: #c0c0c0;
    }

    .tile-flag {
      background: #c0c0c0;
      font-size: 12px;
    }

    .tile-mine {
      background: #e0e0e0;
      border: 1px solid #808080;
      font-size: 12px;
    }

    .tile-number {
      background: #e0e0e0;
      border: 1px solid #808080;
    }

    /* Legend tile colors - only for legend display */
    .legend-tile.tile-1 { color: #0000ff; } /* Blue */
    .legend-tile.tile-2 { color: #008000; } /* Green */
    .legend-tile.tile-3 { color: #ff0000; } /* Red */
    .legend-tile.tile-4 { color: #000080; } /* Dark Blue */
    .legend-tile.tile-5 { color: #800000; } /* Maroon */
    .legend-tile.tile-6 { color: #008080; } /* Teal */
    .legend-tile.tile-7 { color: #000000; } /* Black */
    .legend-tile.tile-8 { color: #808080; } /* Gray */

    /* Game state indicators - these are handled by JavaScript */

    @media (max-width: 768px) {
      .minesweeper-header {
        flex-direction: column;
        gap: var(--space-md);
      }

      .minesweeper-stats {
        width: 100%;
        justify-content: space-around;
      }

      .minesweeper-counter,
      .minesweeper-timer {
        min-width: 80px;
      }

      .minesweeper-board {
        grid-template-columns: repeat(9, 1fr);
      }

      .minesweeper-tile {
        width: 28px;
        height: 28px;
        font-size: 12px;
      }

      .legend-items {
        flex-direction: column;
        gap: var(--space-sm);
      }
    }

    @media (max-width: 480px) {
      .minesweeper-tile {
        width: 24px;
        height: 24px;
        font-size: 10px;
      }

      .minesweeper-board {
        gap: 1px;
        padding: 2px;
      }
    }
  </style>
</Layout>